<Window x:Class="GraphTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphTestApp"
		xmlns:graph="clr-namespace:Graph;assembly=Graph"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
	<Grid>

		<StackPanel>
			<graph:Slot Width="Auto" Height="40" SlotColor="#FF00D300" HorizontalAlignment="Center" VerticalAlignment="Top">
	tsafsa
			</graph:Slot>

			<graph:SlotsGroup Width="Auto" Height="Auto" GroupName="{Binding GroupName}" HorizontalAlignment="Center" ItemsSource="{Binding Slots}" Background="Azure" BorderThickness="2" BorderBrush="Black" >
			</graph:SlotsGroup>
			<!--<graph:SlotSocket Width="40" Height="40" Background="Black" />-->
		</StackPanel>
	</Grid>
</Window>
