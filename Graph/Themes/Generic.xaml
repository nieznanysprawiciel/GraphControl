<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Graph">
	
	
    <Style TargetType="{x:Type local:GraphArea}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:GraphArea}">
					<Grid>
						<Border Background="{TemplateBinding Background}"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}">

						</Border>
					</Grid>
				</ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

	<Style TargetType="{x:Type local:SlotSocket}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type local:SlotSocket}">
										
					<Grid>
						<!--<Ellipse Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Fill="{TemplateBinding Background}"/>-->
						<Ellipse Width="20" Height="20" Fill="{TemplateBinding SocketBrush}"/>
						<Ellipse Width="12" Height="12" Fill="{TemplateBinding Background}"/>
					</Grid>
					
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="{x:Type local:Slot}">
		<Setter Property="Background" Value="Black" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate  TargetType="{x:Type local:Slot}">
					
					<StackPanel Orientation="Horizontal">
						<Border x:Name="PART_MainBorder" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
							<ContentControl x:Name="PART_body" 
                                    HorizontalAlignment="{TemplateBinding HorizontalAlignment}" 
                                    VerticalAlignment="{TemplateBinding VerticalAlignment}" >
							</ContentControl>
						</Border>
						<local:SlotSocket x:Name="PART_socket"
										  Width="{TemplateBinding Width}"
										  Height="{TemplateBinding Height}"
										  Color="{TemplateBinding SlotColor}"
										  Background="{TemplateBinding Background}"/>
						
					</StackPanel>
					
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>




</ResourceDictionary>
